generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Guest
  Member
  RaidLead
  GuildLead
  Admin
}

model User {
  id                        String   @id @default(cuid())
  email                     String   @unique
  name                      String
  role                      UserRole @default(Guest)
  currentHashedRefreshToken String?
  hashedPassword            String?
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

enum CharacterClass {
  Warrior
  Paladin
  Hunter
  Rogue
  Priest
  Shaman
  Mage
  Warlock
  Monk
  Druid
  DemonHunter
  DeathKnight
  Evoker
}

enum CharacterRole {
  Tank
  Healer
  Damage
}

enum ListType {
  SuicideKing
  TSet
}

model Character {
  id                     String                   @id @default(cuid())
  name                   String
  class                  CharacterClass
  roles                  CharacterRole[]
  RaidContribution       RaidContribution[]
  SuicideKingList        SuicideKingList[]
  SuicideKingListHistory SuicideKingListHistory[]
}

model RaidContribution {
  id          String    @id
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  date        DateTime
  amount      Int
  characterId String
}

model SuicideKingList {
  characterId  String    @id
  character    Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  position     Int?      @unique @map("position")
  tSetPosition Int?      @unique @map("tSetPosition")
}

model SuicideKingListHistory {
  characterId String    @id
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  listType    ListType
  from        Int?
  to          Int
  timestamp   DateTime  @default(now())
  item        String?
}
